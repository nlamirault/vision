[Unit]
Description=Prometheus for Vision
Requires=docker.service
After=docker.service

[Service]
Restart=always
ExecStartPre=-/usr/bin/docker stop vision-prometheus
ExecStartPre=-/usr/bin/docker rm vision-prometheus
ExecStartPre=/usr/bin/docker pull prom/prometheus:0.17.0
ExecStart=/usr/bin/docker run --rm -p 9090:9090 prom/prometheus:0.17.0

[Install]
WantedBy=local.target
